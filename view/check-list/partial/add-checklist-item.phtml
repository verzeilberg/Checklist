                    row.append($('<td>').html(value));
                });
                row.append($('<td class="text-center">').html('<a class="btn btn-sm btn-secondary" href="/beheer/checklistitem/edit/'+response.checkListItemId+'"><i class="fas fa-edit"></i></a>&nbsp;&nbsp;&nbsp;<a class="btn btn-sm btn-danger" href="/beheer/checklistitem/delete/'+response.checkListItemId+'"><i class="fas fa-trash-alt"></i></a>'));
                $('#myTable > tbody#result').append(row);

                $(function () {
                    $('#addChecklistItem').modal('toggle');
                });
            }
        });


    });

    function clearFormFields()
    {
        $('form#CheckListItem input[type=text]').val('');
