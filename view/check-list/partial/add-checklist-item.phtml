    $('#addChecklistItemButton').on('click', function () {
        var formData = $("form#CheckListItem").serialize();

        $.ajax({
            url: '<?php echo $this->url('checklistajax', ['action' => 'addChecklistItem']); ?>',
            dataType: 'json',
            data: {
                id: <?= $checklist->getId(); ?>,
